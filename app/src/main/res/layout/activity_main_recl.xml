<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    tools:context="com.apps.kanchan.mcq.MainActivity">


    <FrameLayout
        android:id="@+id/examFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/instructionsFrameLayout">

        <TextView
            android:id="@+id/examTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/white1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Exam"
            android:textSize="18sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/selectionBorder1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/examFrameLayout"
        android:layout_marginLeft="10dp"
        android:background="@android:color/darker_gray">

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/examsRecycleView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/selectionBorder1"
        android:layout_marginTop="8dp"
        android:elevation="0dp">

    </android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/categoryFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/examsRecycleView2">

        <TextView
            android:id="@+id/categoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/white1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Stream"
            android:textSize="18sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/selectionBorder2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/categoryFrameLayout"
        android:layout_marginLeft="10dp"
        android:background="@android:color/darker_gray">

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/examCategoriesRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selectionBorder3"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/categoryFrameLayout"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp" />

    <FrameLayout
        android:id="@+id/selectionBorder3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/startFrameLayout"
        android:background="@android:color/darker_gray">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/startFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="5dp">

        <TextView
            android:id="@+id/startTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/start_preparation"
            android:textColor="@color/lightGray"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/selectionToBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:background="@color/white1"
            app:srcCompat="?attr/homeAsUpIndicator" />
    </FrameLayout>

</android.widget.RelativeLayout>
