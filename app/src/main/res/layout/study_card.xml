<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/studyCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_shadow_start_color"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/studyCardChapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@color/white1"
            android:minHeight="20dp">

            <TextView
                android:id="@+id/chapterTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Chapter :"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/chapter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:gravity="left|center"
                android:text="TextView"
                android:textSize="12sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/studyCardBorder1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/studyCardChapter"
            android:layout_marginLeft="8dp"
            android:background="@android:color/darker_gray">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/studyCardQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studyCardBorder1"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:minHeight="142dp">

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingTop="8dp"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/studyCardBorder2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/studyCardQuestion"
            android:layout_marginLeft="8dp"
            android:background="@android:color/darker_gray">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/studyCardAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studyCardBorder2"
            android:layout_marginLeft="8dp"
            android:alwaysDrawnWithCache="false"
            android:animateLayoutChanges="false"
            android:minHeight="181dp">

            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="TextView"
                android:textColor="@android:color/holo_green_light"
                android:textSize="20sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/studyCardAnswerShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studyCardBorder2"
            android:layout_marginLeft="8dp"
            android:minHeight="181dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/showTheAnswer"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@color/white1"
                android:elevation="8dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Show the Answer"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="22sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/studyCardBorder3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/studyCardAnswer"
            android:background="@android:color/darker_gray">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/studyActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studyCardBorder3">

            <TextView
                android:id="@+id/studyGoIt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:padding="8dp"
                android:text="GOT IT"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/revisionActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/studyCardBorder3"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/revisionGoIt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:padding="8dp"
                android:text="GOT IT"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/revisionNotGoIt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:padding="8dp"
                android:text="NOT GOT IT"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>